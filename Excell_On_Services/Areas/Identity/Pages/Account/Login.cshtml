@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
    <link rel="stylesheet" href="~/dashboard/css/Registration.css">
    <link rel="icon" type="image/png" href="~/images/icon.png">

}

<body class="h-100">
<div class="authincation h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100 align-items-center">
            <div class="col-md-6">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <div class="d-flex">
                                    <a href="#" class="text-primary cursor-pointer" onclick="history.back()">Go Back</a>
                                    <h4 class="text-center mx-5 my-5 px-5 mt-5"><strong>Login your account</strong></h4>
                                </div>
                                
                                <form class="" id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email"><strong>Email</strong></label>
                                        <input asp-for="Input.Email" type="email" class="form-control" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"><strong>Password</strong></label>
                                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    </div>
                                    <div class="custom-control custom-checkbox bg-light mt-2">
                                        <label asp-for="Input.RememberMe" class="custom-control-label mt-2">
                                            <input class="form-check-input mt-0" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                                    </div>
                                </form>
                                <div class="new-account mt-3">
                                    <p>
                                        Don't have an account?  <a class="text-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Yourself</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
