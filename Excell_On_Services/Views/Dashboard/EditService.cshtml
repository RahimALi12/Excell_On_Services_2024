@model Excell_On_Services.Models.Services

@{
    ViewData["Title"] = "EditService";  
    Layout = "_DashboardLayout";
}


<h1>EditService</h1>

<div class="row justify-content-center mt-5">
    <div class="col-md-4 card" style="margin-top: 100px;">
        <form class="p-3" asp-controller="Dashboard" asp-action="EditService" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service_Id" />
            <div class="form-group">
                <label asp-for="Service_Name" class="control-label">Service</label>
                <input asp-for="Service_Name" class="form-control" />
                <span asp-validation-for="Service_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceChargesPerMonth" class="control-label">Charges Per Month</label>
                <input type="number" asp-for="ServiceChargesPerMonth" class="form-control" />
                <span asp-validation-for="ServiceChargesPerMonth" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Update" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Dashboard">Back to List</a>
</div>

